@{
    ViewData["Title"] = "New Project";
    string authorName = ViewBag.AuthorName;
    string projectLayout = ViewBag.ProjectLayout;
}

<div>
    <form class="m-auto mt-2 w-90" action="CreateProject" method="post">
        <div class="row space-between">
            <label for="projectName">Project Name: </label>
            <input type="text" name="projectName" id="projectName">
        </div>
        <div class="row space-between">
            <label for="authorName">Author Name: </label>
            <input type="text" value="@authorName" name="authorName" id="authorName">
        </div>
        <div class="row space-between">
            <label for="projectGenre">Genre: </label>
            <input type="text" name="projectGenre" id="projectGenre">
        </div>
        <div class="row space-between">
            <label for="documentLayout">Project Layout: </label>
            @if(projectLayout != "")
            {
                <select name="documentLayout" value="@projectLayout" id="documentLayout" class="w-50">
                    <option value="chapters">Chapters</option>
                    <option value="scenes">Scenes</option>
                    <option value="connected">Connected</option>
                </select>
            } else {
                <select name="documentLayout" value="Chapters" id="documentLayout" class="w-50">
                    <option value="chapters">Chapters</option>
                    <option value="scenes">Scenes</option>
                    <option value="connected">Connected</option>
                </select>
            }
        </div>
        <input type="submit" value="Create" class="mt-2 mb-1" />
    </form>
</div>
